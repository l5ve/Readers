<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/signin_id"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:gravity="center"
        android:ems="10"
        android:hint="@string/id"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/input_layout"
        android:padding="@dimen/spacing_small2"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <EditText
        android:id="@+id/signin_nickname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:gravity="center"
        android:ems="10"
        android:hint="@string/nickname"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/input_layout"
        android:padding="@dimen/spacing_small2"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <EditText
        android:id="@+id/signin_pw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:gravity="center"
        android:ems="10"
        android:hint="@string/password"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/input_layout"
        android:padding="@dimen/spacing_small2"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <EditText
        android:id="@+id/signin_pw_ver"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:gravity="center"
        android:ems="10"
        android:hint="@string/password_verification"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/input_layout"
        android:padding="@dimen/spacing_small2"
        android:layout_marginBottom="@dimen/spacing_small2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_taste"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_medium2"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taste_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginHorizontal="@dimen/spacing_xxxlarge"/>

    <ImageButton
        android:id="@+id/sign_up_Btn"
        android:layout_width="@dimen/spacing_xxxlarge"
        android:layout_height="@dimen/spacing_large"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_gravity="end"
        android:src="@drawable/next" />

</LinearLayout>