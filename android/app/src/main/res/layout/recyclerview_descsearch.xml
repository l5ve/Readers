<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/desc_search_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/spacing_small2"
    android:layout_marginVertical="@dimen/spacing_small2"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/desc_search_cv_image"
            android:layout_width="@dimen/cardview_memo_thumbnail"
            android:layout_height="@dimen/cardview_memo_thumbnail"
            android:layout_margin="@dimen/spacing_small2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc_search_cv_platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/platforms"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/desc_search_cv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_medium2" />

            <TextView
                android:id="@+id/desc_search_cv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/desc_search_cv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_desc"
        android:layout_marginBottom="@dimen/spacing_small"/>

</LinearLayout>