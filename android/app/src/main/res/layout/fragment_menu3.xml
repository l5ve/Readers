<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mypage_profile_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryBright2">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/spacing_medium"
            tools:srcCompat="@drawable/profile_image_temp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge2"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_large"
                android:text="이름없음"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/profile_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="@dimen/text_size_xsmall"
                android:text="@string/profile_edit" />
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.capstone.readers.Menu3Fragment1"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.capstone.readers.Menu3Fragment2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>