<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/episode_cv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/epicard_height"
        android:layout_margin="@dimen/spacing_small"
        card:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/spacing_medium"
            android:layout_marginHorizontal="@dimen/spacing_small2">

            <ImageView
                android:id="@+id/episode_cv_bookmark"
                android:layout_width="@dimen/epi_bookmark"
                android:layout_height="@dimen/epi_bookmark"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_small"
                card:srcCompat="@drawable/bookmark" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/episode_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/episode_cv_thumbnail"
                    android:layout_width="@dimen/cardview_toon_thumbnail"
                    android:layout_height="@dimen/cardview_toon_thumbnail"
                    android:layout_marginVertical="@dimen/spacing_small"
                    android:layout_gravity="center"

                    card:layout_constraintStart_toStartOf="parent"
                    card:layout_constraintTop_toTopOf="parent"
                    card:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/episode_cv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small2"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/title"
                    android:layout_gravity="center"

                    card:layout_constraintStart_toEndOf="@+id/episode_cv_thumbnail"
                    card:layout_constraintTop_toTopOf="parent"
                    card:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/episode_cv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/update"
                    android:layout_gravity="center"
                    android:gravity="end"

                    card:layout_constraintEnd_toEndOf="parent"
                    card:layout_constraintTop_toTopOf="parent"
                    card:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>